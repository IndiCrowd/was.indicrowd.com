<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE decorators>
<decorators defaultdir="/WEB-INF/view/layout">

	<excludes>
		<pattern>/i18n/*</pattern>
		<pattern>/js/*</pattern>
		<pattern>/css/*</pattern>
		<pattern>/img/*</pattern>
		<pattern>/landing</pattern>
	</excludes>
	
	<decorator name="layout" page="layout.jsp">
		<pattern>/*</pattern>
		<pattern>/concert/reserve</pattern>
		<pattern>/concert/manage/*</pattern>
		<pattern>/concert/</pattern>
	</decorator>
	
	<decorator name="concert" page="concert.jsp">
		<pattern>/concert/*</pattern>
	</decorator>
	
	<decorator name="base" page="base.jsp">
		<pattern>/concert/*/feed</pattern>
		<pattern>/concert/*/changeBG</pattern>
		<pattern>/c/*</pattern>
		<pattern>/concert/*/replay</pattern>
	</decorator>
	
</decorators>